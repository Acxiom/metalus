# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# Health Check routes
GET /v1/health-check/ready com.acxiom.metalus.controllers.HealthCheckController.healthCheck()
GET /v1/health-check/alive com.acxiom.metalus.controllers.HealthCheckController.healthCheck()

GET /v1/agent/ com.acxiom.metalus.controllers.AgentController.getStatuses()
GET /v1/agent/:id com.acxiom.metalus.controllers.AgentController.getStatus(id: Long)
POST /v1/agent/execute com.acxiom.metalus.controllers.AgentController.execute()
