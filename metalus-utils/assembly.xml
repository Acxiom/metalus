<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>bundle</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <files>
        <file>
            <source>scripts/metadata-extractor.sh</source>
            <outputDirectory>metalus-utils/bin</outputDirectory>
        </file>
        <file>
            <source>scripts/dependency-resolver.sh</source>
            <outputDirectory>metalus-utils/bin</outputDirectory>
        </file>
        <file>
            <source>scripts/log4j.properties</source>
            <outputDirectory>metalus-utils/conf</outputDirectory>
        </file>
    </files>
    <fileSets>
        <fileSet>
            <directory>target/libraries</directory>
            <outputDirectory>metalus-utils/libraries</outputDirectory>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <useProjectArtifact>true</useProjectArtifact>
            <useTransitiveDependencies>false</useTransitiveDependencies>
            <outputDirectory>metalus-utils/libraries</outputDirectory>
        </dependencySet>
    </dependencySets>
</assembly>
